# Server Configuration
NODE_ENV=production
PORT=5000

# Database - PostgreSQL connection string
# Format: postgresql://username:password@host:port/database
# For Render.com: Add as DATABASE_URL in environment variables (auto-provided)
DATABASE_URL=postgresql://user:password@localhost:5432/restaurant_db

# Authentication
# CRITICAL: Generate a secure random secret for production!
# Use: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET=your-very-secure-random-secret-key-change-this-in-production

# CORS - comma-separated list of allowed origins
# Update these with your actual frontend URLs
CORS_ORIGIN=https://your-frontend-domain.onrender.com,https://www.your-domain.com

# Logging
LOG_LEVEL=info

# Rate Limiting (optional overrides)
# API_RATE_LIMIT_WINDOW_MS=900000
# API_RATE_LIMIT_MAX=100
# ORDER_RATE_LIMIT_WINDOW_MS=60000
# ORDER_RATE_LIMIT_MAX=10
